{% from 'components/org_id.html.j2' import orgid_link, orgid_connection %}


{% macro data_source(source, org, request) %}
  <div class="mt4 measure-wide bb b--light-gray pb3 bw3">
    <h4 class="ma0 pa0" id='data-source-{{source.identifier}}'><a class="link near-black underline-hover" href="{{ source.publisher.website }}">{{ source.publisher.name }}</a></h4>
    {% if source.title != source.publisher.name %}
    <h5 class="ma0 pa0 f5 b">{{ source.title }}</h5>
    {% endif %}
    {% if source.description %}
    <p class="mv1 pa0 mid-gray f6">{{ source.description }}</p>
    {% endif %}
    {% if source.modified %}
    <p class="mv1 pa0 f5"><strong>Last updated:</strong> {{ source.modified }}</p>
    {# <p class="mv1 pa0 f5"><strong>Last updated:</strong> {{ "{:%Y-%m-%d}".format(source.modified) }}</p> #}
    {% endif %}
    <p class="mv1 pa0 f5">
      <a class="link underline blue" href="{{ source.license }}">{{ source.license_name }}</a>
      {% if source.distribution|length == 1 %}
      | <a class="link underline blue" href="{{ source.distribution[0].accessURL }}">Access data</a>
      | <a class="link underline blue" href="{{ source.distribution[0].downloadURL }}" title="Download links may be large files">
          Download data {{ get_filetype(source.distribution[0].downloadURL) }}
        </a><br>
      {% endif %}
    </p>
      {% if source.distribution|length > 1 %}
      <ul class="f5">
      {% for d in source.distribution %}
        <li class="">
          <a class="link underline blue" href="{{ d.accessURL }}">{{ d.title }}</a>
          <a class="link underline blue" href="{{ d.downloadURL }}" title="Download links may be large files">Download data {{ get_filetype(d.downloadURL) }}</a>
        </li>
      {% endfor %}
      </ul>
      {% endif %}
      {% for r in org.records if r.source.id == source.identifier %}
        {% if loop.first %}
        <p class="mt1 mb0 pa0 f6"><strong>Source for records: </strong></p>
        <ul class="mt1 mb1 pa0 list">
        {% endif %}
            <li class="dib mr2">{{ orgid_link(r.org_id, request) }}</li>
        {% if loop.last %}
        </ul>
        {% endif %}
      {% endfor %}
    
    <p class="mv1 pa0 f5">
      {% for r in org.org_links if r.source.id == source.identifier %}
        {% if loop.first %}
        <p class="mt1 mb0 pa0 f6"><strong>Source for record links:</strong></p>
        <ul class="mt1 mb1 pa0 list">
        {% endif %}
            <li class="f6">
              {{ orgid_connection(r.org_id_a, r.org_id_b, request) }}
            </li>
        {% if loop.last %}
        </ul>
        {% endif %}
      {% endfor %}
    </p>
  </div>
{% endmacro %}



{%- macro get_filetype(url) %}
{%- if url.endswith("csv") %}(csv)
{%- elif url.endswith("zip") %}(zip)
{%- elif url.endswith("xlsx") %}(excel)
{%- endif %}
{%- endmacro %}